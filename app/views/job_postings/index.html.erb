<div class="d-flex justify-content-center m-3">
  <div class="your-div">
        <h1>Job Postings</h1>
  </div>
</div>
<div class="d-flex justify-content-center m-3">
    <div class="your-div">
        <%= form_tag job_postings_path, method: :get do %>
        <%= label_tag :search, "Search for job postings:" %>
        <%= text_field_tag :search %>
        <%= submit_tag "Search" %>
        <% end %>

        <% if @search_term.present? %>
            <p>Results for search: <%= @search_term %></p>
        <% end %>
    </div>
</div>

<div class="d-flex justify-content-center m-3">
    <div class="your-div">
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Company</th>
                    <th>Salary</th>
                    <th>Location</th>
                </tr>
            </thead>

            <tbody>
                <% @job_postings.each do |job_posting| %>
                    <tr>
                        <td> <%= job_posting.title  %> </td>
                        <td> <%= job_posting.company  %> </td>
                        <td> <%= job_posting.salary  %> </td>
                        <td> <%= job_posting.location  %> </td>
                    </tr>
                <% end %>
            </tbody>
        </table>

  </div>
</div>